/* pages/setting/setting.wxss */
.parent {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.margin-auto {
  margin-left: auto;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
}

.avatar-wrapper {
  width: 80rpx;
  height: 80rpx;
  display: inline;
  margin: 0;
  padding: 0;
}

.row-flex {
  display: flex;
  background-color: white;
  margin-top: 1px;
  padding-left: 16px;
  padding-right: 16px;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 140rpx;
}

.nickname {
  width: 200rpx;
  margin-right: 10rpx;
  height: 100%;
  text-align: right;
  white-space: nowrap;
}

.image {
  width: 80rpx;
  height: 80rpx;
}

.line {
  height: 1px;
  background-color: #f6f6f6;
}

.margin-left-30 {
  margin-left: 30rpx;
}

.text-style {
  font-size: 28rpx;
  color: #666666;
  margin-left: 10rpx;
}

.arrow {
  margin-left: 20rpx;
  width: 30rpx;
  height: 30rpx;
}