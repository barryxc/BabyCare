/* pages/family/family.wxss */

page{
  width: 100vw;
}

.addFamily {
  background: rgb(205, 205, 241);
  padding: 0%;
  margin: 0 0 0 0;
  text-align: center;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: normal;
  width: 100vw;
  height: 100rpx;
  border-radius: 10rpx;
}

.addFamily:not([size=min]) {
  background: rgb(205, 205, 241);
  padding: 0%;
  margin: 0 0 0 0;
  text-align: center;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: normal;
  width: 80%;
  height: 100rpx;
  border-radius: 10rpx;
}

.addFamily:active {
  background: rgba(205, 205, 241, 0.5);
}

.addFamily:not:active {
  background: rgba(205, 205, 241, 0.5);
  margin: 0% 0 0 0;
}