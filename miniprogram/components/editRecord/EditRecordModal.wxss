/* components/editRecord/EditRecordModal.wxss */
.mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 10000;
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  animation: fade_in 1s;
}

.modal-container {
  background-color: #f6f6f6;
  position: fixed;
  border-radius: 30rpx;
  bottom: 0rpx;
  left: 0;
  right: 0;
  height: fit-content;
  min-height: 300px;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: slide_up 0.5s;
}

.header {
  display: flex;
  width: 100%;
  height: 110rpx;
  background-color: white;
  border-radius: 30rpx 30rpx 0 0;
  justify-content: center;
  align-items: center;
}

.title {
  font-size: 30rpx;
  color: #333333;
}


.body {
  display: flex;
  width: 100%;
  border-radius: 2px;
  flex-grow: 1;
  flex-direction: column;
  align-items: center;
}

.row {
  position: relative;
  width: 100%;
  height: 120rpx;
  padding: 0rpx 20rpx;
  background-color: white;
  box-sizing: border-box;
  margin-top: 1px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.img-row {
  width: 100%;
  height: 100px;
  padding: 0rpx 20rpx;
  background-color: white;
  box-sizing: border-box;
  margin-top: 1px;
  display: flex;
  align-items: center;
}

.row:active {
  background-color: #f1f1f1;
}

.arrow-style {
  margin-left: 20rpx;
  width: 30rpx;
  height: 30rpx;
}

.label {
  font-size: 30rpx;
  width: 100rpx;
  display: inline-block;
  color: #333333;
}

.content {
  font-size: 28rpx;
  color: #666666;
  overflow-x: scroll;
  flex-grow: 1;
  text-align: end;
  white-space: nowrap;
}

.footer {
  display: flex;
  width: 100%;
  height: 100rpx;
  align-items: center;
  justify-content: space-evenly;
  padding: 30rpx 0rpx;
  margin-top: 1px;
  background-color: white;
  margin-bottom: env(safe-area-inset-bottom);
}

.view-img {
  width: 60px;
  height: 60px;
}

.icon-img {
  width: 40px;
  height: 40px;
}

.cancel-style {
  border-radius: 20rpx;
  padding: 15rpx 40rpx;
  color: #aaaaaa;
  font-size: 28rpx;
  text-align: center;
  box-shadow: 0px 2px 4px #666666;
}

.delete-style {
  background: linear-gradient(to right, rgb(244, 232, 200), rgb(234, 200, 200));
  border-radius: 20rpx;
  padding: 15rpx 40rpx;
  color: white;
  font-size: 28rpx;
  text-align: center;
  box-shadow: 0px 2px 4px, rgb(244, 232, 200);
}

.modify-style {
  background-color: pink;
  border-radius: 20rpx;
  padding: 15rpx 40rpx;
  font-size: 28rpx;
  color: white;
  text-align: center;
  box-shadow: 0px 2px 4px pink;
}

.click-style:active {
  opacity: 0.5;
}

@keyframes slide_up {
  from {
    transform: translateY(100%)
  }

  to {
    transform: translateY(0);
  }
}


@keyframes fade_in {
  from {
    background-color: rgba(0, 0, 0, 0);
  }

  to {
    background-color: rgba(0, 0, 0, 0.5);
  }
}